<h1><%= t('admin.users.index.title') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('admin.users.index.headers.email') %></th>
      <th><%= t('admin.users.index.headers.role') %></th>
      <th><%= t('admin.users.index.headers.actions') %></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= t("enums.user.role.#{user.role}") %></td>
        <td>
          <%= link_to t('admin.users.index.edit'), edit_admin_user_path(user) %>
          <%= link_to t('admin.users.index.delete'), admin_user_path(user), data: { turbo_method: 'delete', confirm: t('admin.users.index.confirm_delete') } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
