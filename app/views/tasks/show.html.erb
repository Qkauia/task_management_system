<h1 class="mb-4"><%= t('tasks.headers.task_details') %></h1>

<div class="card mb-4">
  <div class="card-body">
    <div class="mb-3">
      <strong><%= t('tasks.headers.title') %>:</strong>
      <span class="ms-2"><%= @task.title %></span>
    </div>

    <div class="mb-3">
      <strong><%= t('tasks.headers.content') %>:</strong>
      <span class="ms-2"><%= @task.content %></span>
    </div>

    <div class="mb-3">
      <strong><%= t('tasks.headers.start_time') %>:</strong>
      <span class="ms-2"><%= @task.start_time %></span>
    </div>

    <div class="mb-3">
      <strong><%= t('tasks.headers.end_time') %>:</strong>
      <span class="ms-2"><%= @task.end_time %></span>
    </div>

    <div class="mb-3">
      <strong><%= t('tasks.headers.founder') %>:</strong>
      <span class="badge bg-success ms-2"><%= @task.author.email %></span>
    </div>

    <div class="mb-3">
      <strong><%= t('tasks.headers.related_parties') %>:</strong>
      <% associated_users = @task.shared_users.where.not(id: current_user.id) %>
      <% if current_user.email != @task.author.email %>
        <span class="badge bg-primary ms-2"><%= @task.author.email %></span>
      <% end %>

      <% if associated_users.any? %>
        <% associated_users.each do |user| %>
          <span class="badge bg-primary ms-2"><%= user.email %></span>
        <% end %>
      <% else %>
        <% if current_user.email == @task.author.email %>
          <span class="ms-2 text-muted"><%= t('tasks.headers.no_associated_users') %></span>
        <% end %>
      <% end %>
    </div>

    <div class="mb-3">
      <strong><%= t('tasks.headers.priority') %>:</strong>
      <span class="ms-2 badge bg-<%= @task.priority == 'high' ? 'danger' : @task.priority == 'medium' ? 'warning' : 'secondary' %>">
        <%= t("enums.task.priority.#{@task.priority}") %>
      </span>
    </div>

    <div class="mb-3">
      <strong><%= t('tasks.headers.status') %>:</strong>
      <span class="ms-2 badge bg-<%= @task.status == 'completed' ? 'success' : @task.status == 'in_progress' ? 'primary' : 'secondary' %>">
        <%= t("enums.task.status.#{@task.status}") %>
      </span>
    </div>

    <div class="mb-3">
      <strong><%= t('tasks.headers.tags') %>:</strong>
      <span class="badge bg-warning ms-2"><%= @task.tags.map(&:name).join(", ") %></span>
    </div>
  </div>
</div>

<div class="d-flex gap-2">
  <%= link_to t('tasks.link.edit'), edit_task_path(@task), class: "btn btn-primary" %>
  <%= link_to t('tasks.link.back'), tasks_path, class: "btn btn-secondary" %>
</div>
