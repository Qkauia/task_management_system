<h1><%= t('tasks.headers.my_tasks') %></h1>

<%= form_with url: tasks_path, method: :get, local: true do |form| %>
  <%= form.label :status, t('tasks.filters.status') %>
  <%= form.select :status, Task.statuses.keys.map { |status| [t("enums.task.status.#{status}"), status] }, include_blank: true %>

  <%= form.label :query, t('tasks.filters.keyword') %>
  <%= form.text_field :query, value: params[:query] %>

  <%= form.submit t('tasks.filters.filter') %>
<% end %>

<table>
  <thead>
    <tr>
      <th><%= t('tasks.headers.title') %></th>
      <th><%= t('tasks.headers.priority') %></th>
      <th><%= t('tasks.headers.status') %></th>
      <th><%= t('tasks.headers.start_time') %></th>
      <th><%= t('tasks.headers.end_time') %></th>
      <th><%= t('tasks.headers.actions') %></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.title, task_path(task.id) %></td>
        <td><%= t("enums.task.priority.#{task.priority}") %></td>
        <td><%= t("enums.task.status.#{task.status}") %></td>
        <td><%= task.start_time %></td>
        <td><%= task.end_time %></td>
        <td>
          <%= link_to t('tasks.link.show'), task %>
          <%= link_to t('tasks.link.edit'), edit_task_path(task) %>
          <%= link_to t('tasks.link.delete'), task, data: { turbo_method: "delete", turbo_confirm: t('tasks.destroy.confirm') } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('tasks.link.new_task'), new_task_path %>
