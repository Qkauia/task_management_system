<h1><%= action_name.capitalize %> Task</h1>

<%= form_with model: @task, local: true do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>

  <div>
    <%= form.label :start_time %>
    <%= form.datetime_select :start_time %>
  </div>

  <div>
    <%= form.label :end_time %>
    <%= form.datetime_select :end_time %>
  </div>

  <div>
    <%= form.label :priority %>
    <%= form.select :priority, Task.priorities.keys.map { |p| [p.humanize, p] } %>
  </div>

  <div>
    <%= form.label :status %>
    <%= form.select :status, Task.statuses.keys.map { |s| [s.humanize, s] } %>
  </div>

  <div>
    <%= form.label :tags, "Tags" %>
    <%= form.collection_select :tag_ids, Tag.all, :id, :name, {}, multiple: true %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Back', tasks_path %>
