<div class="container d-flex justify-content-center align-items-center min-vh-100">
  <div class="card shadow-lg p-4" style="max-width: 400px; width: 100%;">
    <div class="card-body">
      <h1 class="text-center mb-4"><%= t('users.headers.update_password') %></h1>

      <% if @user.errors.any? %>
        <div class="alert alert-danger" id="error_explanation">
          <h2 class="h5"><%= pluralize(@user.errors.count, "error") %> <%= t('users.errors.prohibited') %>:</h2>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_with model: @user, url: user_path(@user), method: :patch, local: true, data: { turbo: false }, class: "needs-validation" do |form| %>
        <div class="mb-3">
          <%= form.label :current_password, t('users.form.current_password'), class: "form-label" %>
          <%= form.password_field :current_password, class: "form-control", required: true %>
        </div>

        <div class="mb-3">
          <%= form.label :password, t('users.form.new_password'), class: "form-label" %>
          <%= form.password_field :password, class: "form-control", required: true %>
        </div>

        <div class="mb-3">
          <%= form.label :password_confirmation, t('users.form.password_confirmation'), class: "form-label" %>
          <%= form.password_field :password_confirmation, class: "form-control", required: true %>
        </div>

        <div class="d-grid">
          <%= form.submit t('users.headers.update_password'), class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
