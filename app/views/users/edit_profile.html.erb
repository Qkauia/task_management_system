<div class="container d-flex justify-content-center align-items-center min-vh-100">
  <div class="card shadow-lg p-4" style="max-width: 400px; width: 100%;">
    <div class="card-body">
      <h1 class="text-center mb-4"><%= t('users.avatar.update') %></h1>
      <%= form_with model: @user, url: update_profile_path, local: true, class: "needs-validation" do |form| %>
        <div class="mb-3">
          <%= form.label :avatar, t('users.form.upload_avatar'), class: "mb-2" %>
          <%= form.file_field :avatar, class: "form-control" %>
        </div>
        <div class="d-flex justify-content-center mt-4">
          <%= form.submit class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
