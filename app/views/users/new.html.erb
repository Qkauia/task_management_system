<h1><%= t('users.headers.registration') %></h1>

<%= form_with model: @user, url: signup_path, local: true do |form| %>
  <div>
    <%= form.label :email, t('users.form.email') %>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.label :password, t('users.form.password') %>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.label :password_confirmation, t('users.form.password_confirmation') %>
    <%= form.password_field :password_confirmation %>
  </div>
  
  <div>
    <%= form.submit t('users.headers.registration') %>
  </div>
<% end %>